<section class="" style="background-color: #DBDBDB;">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <%= image_tag 'wizelite.png', :class=>"logo" %>
    </div>
    <div class="navbar-text float-right">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li> <%= link_to "Wishlist", root_path, :class => 'nav-link btn my-2 my-sm-0' %> </li>
          <li> <%= link_to "Credits : #{current_user.credits.to_i}", payment_path, :class => 'nav-link btn my-2 my-sm-0' %> </li>
          <li> <%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-link btn my-2 my-sm-0' %> </li>
          <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link btn my-2 my-sm-0' %> </li>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://mdbcdn.b-cdn.net/img/new/slides/042.webp" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://mdbcdn.b-cdn.net/img/new/slides/043.webp" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://mdbcdn.b-cdn.net/img/new/slides/042.webp" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-lg-8">
            <div class="ps-lg-1-6 ps-xl-5">
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h1 class="h1 mb-0"><%= @apartment.apartment_name %></h1>
                    </div>
                    <p class="text-muted">Near <%= @apartment.location %></p>

                </div>
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h4 class="mb-0">Description</h4>
                    </div>
                    <p class="md-0 text-muted"><%= @apartment.description %></p>
                </div>
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h4 class="mb-0">Aminities</h4>
                    </div>
                    <div class="d-inline mr-1 pr-1">
                        <% if @apartment.ac == true %>
                            <i class="fa fa-home" aria-hidden="true"></i>
                            <div class="d-inline mr-1">Ac</div>
                        <% else %>
                            <i class="fa fa-home" aria-hidden="true"></i>
                            <div class="d-inline mr-1">Non Ac</div>
                        <% end %>
                        </div>
                        <div class="d-inline mr-1 pr-1">
                        <% if @apartment.tv == true %>
                            <i class="fa fa-tv" aria-hidden="true"></i>
                            <div class="d-inline mr-1">Tv</div>
                        <% end %>
                        </div>
                        <div class="d-inline mr-1 pr-1">
                        <% if @apartment.wifi == true %>
                            <i class="fa fa-wifi" aria-hidden="true"></i>
                            <div class="d-inline mr-1">Wifi</div>
                        <% end %>
                        </div>
                        <div class="d-inline mr-1 pr-1">
                        <% if @apartment.cctv == true %>
                            <i class="fa fa-video-camera" aria-hidden="true"></i>
                            <div class="d-inline mr-1">Cctv</div>
                        <% end %>
                        </div>
                        <div class="d-inline mr-1 pr-1">
                        <% if @apartment.house_keeping == true %>
                            <i class="fa fa-bed" aria-hidden="true"></i>
                            <div class="d-inline mr-1">House Keeping</div>
                        <% end %>
                        </div>
                </div>
            </div>
        </div>

        <div class="col-md-7 col-lg-4 mb-5 mb-lg-0 wow fadeIn">

        <%# Transactions Box %>

            <div class="card mt-5 border-1 shadow-lg p-3 mb-5 bg-black rounded">
                <div class="card-body">
                    <h5 class="card-title d-inline pr-1">₹<%= @apartment.price %> <s>₹<%= @apartment.price*2 %></s></h5><span class = "badge badge-success"> 50% offer</span>
                    <p class="card-text text-muted">inclusive of all taxes</p>

                    <div class="card pl-4">
                        <%= Date.today %> - <%= Date.today + 1 %>
                    </div>

                    <i class="fa fa-certificate text-warning"></i>

                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <button type="button" class="btn btn-primary">Button</button>
                    </div>

            </div>
        </div>

    </div>
</div>

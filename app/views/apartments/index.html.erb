<%= render 'navbar' %>

<div class="jumbotron jumbotron-fluid position-relative overlay-bottom" style="margin-bottom: 90px;">
        <div class="container text-center my-5 py-5">
            <h1 class="text-white mt-4 mb-4">Stay Comfort at Anywhere</h1>
            <h1 class="text-white display-1 mb-5">WizElite</h1>
            <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">

              <div class="input-group d-inline">
                <form action="/apartments/list">

                      <%= form_with do |form| %>
                      <div>
                          <%= form.text_field :search, :class=>"form-control border-light", :style=>"padding: 30px 25px;", :placeholder=>"Keyword" %>
                          <div class="input-group-append">
                            <%= form.submit 'Search', method: :get, :class=>"btn btn-secondary px-4 px-lg-5" %>
                          </div>
                      </div>
                      <% end %>

                    </form>
                </div>
              </div>
            </div>
        </div>
    </div>
